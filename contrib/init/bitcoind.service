[Unit]
Description=eCash node
After=network.target

[Service]
ExecStart=%h/bitcoin-abc/bin/bitcoind -daemonwait -conf=%h/.dogecash/bitcoin.conf -pid=%h/.dogecash/bitcoind.pid
ExecStopPost=-/bin/bash -c 'mv %h/.dogecash/debug.log %h/.dogecash/debug_$(date +%%Y%%m%%d%%H%%M%%S).log'
Type=forking
PIDFile=%h/.dogecash/bitcoind.pid
Restart=unless-stopped
RestartSec=5
StartLimitInterval=10

[Install]
WantedBy=default.target
